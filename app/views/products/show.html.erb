
  <p id="notice"><%= notice %></p>

  <div class="container">
      <div class="col-xs-12 col-md-6 col-lg-6">
        <%= image_tag(@product.image_url, class: "img-responsive") %>
      </div>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-lg-6">
        <p class="name details">
          <strong>Name:</strong>
          <%= @product.name %>
        </p>
        <p class="price details text-danger">
          <strong>Price: $</strong>
          <%= @product.price %>
        </p>
        <p class="color details">
          <strong>Color:</strong>
          <%= @product.color %>
        </p>
        <dl class="description details text-warning">
          <dt>Description:</dt>
          <dd>- <%= @product.description %></dd>
        </dl>
        <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>
      </div>
    </div><!-- end row-->
  </div><!-- end container -->

<div class="button-area">
  <button class="btn-link"><%= link_to 'Edit', edit_product_path(@product) %></button>
  <button class="btn-link"><%= link_to 'Back', products_path %></button>
</div>

<div class="comments">
  <%= render 'new_comment' %>
  <%= render 'comments' %>
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
  </div>
</div>

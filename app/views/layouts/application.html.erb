<!DOCTYPE html ng-app>
<html>
<head>
  <title>Philly's Bike Shop</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>
  <% if notice %>
    <p id="notice" class="alert alert-warning"><%= notice %></p>
  <% end %>
  
  <% if alert %>
    <p class="alert alert-danger alert-dismissible" role="alert"><%= alert %></p>
  <% end %>

  <nav class="navbar navbar-inverse navbar-fixed-top" roles="navigation">
      <div class="container-fluid">
        <div class="nav-bar header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="projectName navbar-brand">
            <%= link_to "Philly's Bike Shop", "/static_pages/index" %>
          </div> <!-- end projectName -->
          <ul class="nav pull-right">
            <li class="auth">
              <% if user_signed_in? %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Account <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "My Orders", "/orders" %></li>
                    <li><%= link_to "Edit My Name", current_user %></li>
                    <li><%= link_to "Change My Info", "/users/edit" %></li>
                    <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
                  </ul>
                </li>
              <% else %>
                  <%= link_to('Login', new_user_session_path) %>
                  <%= link_to('Sign up', new_user_registration_path) %>
              <% end %>
            </li>
          </ul>
        </div> <!-- end navbar header -->
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to "About Us", "/static_pages/about" %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Bikes <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Regular Bikes", "/products" %></li>
                <li><a href="#">Motor Bikes(Coming Soon)</a></li>
              </ul>
            </li>
            <li><%= link_to "Contact Us", "/static_pages/contact" %></li>
            <li id="search">
              <%= form_tag("/products", method: "get", class: "navbar-form") do %>
                <%= label_tag(:q, "Search for:", class: "navbar-text") %>
                <%= text_field_tag(:q, nil, placeholder: "Find your bike here") %>
                <%= submit_tag("Search", class: "btn btn-primary navbar-btn") %>
              <% end %>
            </li>
          </ul>
        </div> <!-- end navbar collapse -->
      </div> <!-- end nav container -->
    </nav> <!-- end navbar -->

<div class="wrapper">
  <%= yield %>
<div class="push"></div>
</div> <!-- end page-wrap -->

<footer class="site-footer">
  &copy; 2015 Philly's Bike Shop
</footer>

</body>
</html>
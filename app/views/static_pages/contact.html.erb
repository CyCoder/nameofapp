<h1>Contact Us</h1>

<%= flash[:notice] %>

<div class="col-md-6">
	<h3>Have questions, comments or suggestions for us? Tell us in the form below!</h3>
	<%= form_tag("/static_pages/thank_you") do %>
	<div class="row">
	  <div class="col-md-6">
	    <div class="form-group">
	      <%= label_tag :name, "Name" %>
	      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
	    </div>      
	    <div class="form-group">
	      <%= label_tag :email, "Email Address" %>
	      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
	    </div>
	    <div class="form-group">
	      <%= label_tag :message, "Message" %>
	      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
	    </div>      
	  </div>
	</div>
	<%= submit_tag "Send" %>   
	<% end %>
</div>

<div class="col-md-6">
	<h3>Flushing, NY</h3>

	<iframe width="100%" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJP2PATQVgwokRHih0tNEk7Po&key=AIzaSyB6N4OJitsURJ9nPzPuQUwJUt_tXfWLDXE" allowfullscreen></iframe>
</div>